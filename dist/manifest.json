{
  "manifest_version": 2,

  "name": "Crowler Susep - Axa Seguros",
  "description": "Get statistcs from SUSEP",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "icons": {"256": "icon.png"},   

  "content_scripts": [
    {
      "matches": ["http://www2.susep.gov.br/menuestatistica/SES/premiosesinistros.aspx?id=54"],
      "run_at": "document_end",
      "js": ["js/vendor.js", "js/contentGetStatistics.js"]
    },
    {
      "matches": ["https://www.grapecity.com/en/login/"],
      "run_at": "document_end",
      "js": ["js/vendor.js", "js/contentGenerateSheet.js"]
    },
      
      {
        "matches": ["http://www2.susep.gov.br/menuestatistica/SES/resp_premiosesinistros.aspx"],
        "run_at": "document_end",
        "js": ["js/vendor.js", "js/contentGetTableData.js"]
      }
  ],

  "background": {
    "scripts": ["js/vendor.js", "js/background.js"]
  },

  "permissions": [
    "storage",
    "activeTab"
  ]
}